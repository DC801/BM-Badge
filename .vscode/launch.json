{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    // This configuration requires the Cortex-Debug VS Code extension
    "configurations": [
        {
            "name": "Debug (Desktop)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Software/output/bm_badge.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Software/output",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug (Physical Badge)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "serverpath": "/usr/bin/JLinkGDBServer",
            "armToolchainPath": "/usr/bin",
            "executable": "${workspaceRoot}/Software/output/bm_badge.out",
            "runToMain": true,
            "cwd": "${workspaceRoot}",
            "device": "NRF52840_XXAA",
            "interface": "swd",
            "svdFile": "${workspaceRoot}/../nordic-sdk15.3.0/modules/nrfx/mdk/nrf52840.svd"
        }
    ]
}