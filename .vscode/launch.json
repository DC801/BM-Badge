{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    // This configuration requires the Cortex-Debug VS Code extension
    "configurations": [
        {
            "name": "Debug (Desktop)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bm_badge",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Debug Launch (Physical Badge)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "serverpath": "JLinkGDBServerCLExe",
           //"runToEntryPoint": "main",
            "cwd": "${workspaceRoot}/build_hw",
            "device": "NRF52840_XXAA",
            "interface": "swd",
            "executable": "${workspaceRoot}/build_hw/bm_badge",
            "svdFile": "${workspaceRoot}/nordic-sdk17.1.0/modules/nrfx/mdk/nrf52840.svd",
            "ipAddress": "192.168.1.132",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Debug Attach (Physical Badge)",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "jlink",
            "serverpath": "JLinkGDBServerCLExe",
            "cwd": "${workspaceRoot}/build_hw",
            "device": "NRF52840_XXAA",
            "interface": "swd",
            "executable": "${workspaceRoot}/build_hw/bm_badge",
            "svdFile": "${workspaceRoot}/nordic-sdk17.1.0/modules/nrfx/mdk/nrf52840.svd",
            "ipAddress": "192.168.1.132"
        }
    ]
}