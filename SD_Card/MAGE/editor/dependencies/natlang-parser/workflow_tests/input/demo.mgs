}

reload {
	load map demo
}

show_dialog-demo-end-dream-q {
	show dialog dialog-demo-end-dream-q {
		SELF
		portrait goldfish
		"End this dream?"
		> "Yes" : goto "demo-end-dream-yes"
		> "No" : goto "demo-end-dream-no"
	}
	// doc: End dream?
}

demo-end-dream-yes {
	load map main_menu
}

demo-end-dream-no {
	set entity "%SELF%" interact_script to show_dialog-demo-end-dream-q
}

