// orig script JSON 868, dialog JSON 289 = 1157 => 262 (77% reduction!)

settings for dialog {
	parameters for global defaults { alignment BL }
	parameters for label SELF { entity "%SELF%" }
	parameters for label PLAYER { entity "%PLAYER%" alignment BR }
}

/* -------- ON_TICK SCRIPTS -------- */
// no zigzagging!

felix-loiter {
	if flag storyflag-catwork is true then goto hiding-cat
	turn entity "%SELF%" south
	wait 2000ms /**/ turn entity "%SELF%" east
	wait 800ms /**/ turn entity "%SELF%" west
	wait 1200ms
}
deut-loiter {
	if flag storyflag-catwork is true then goto hiding-cat
	turn entity "%SELF%" west
	wait 900ms /**/ turn entity "%SELF%" east
	wait 900ms /**/ turn entity "%SELF%" south
	wait 2400ms
}
bmurray-loiter {
	if flag storyflag-catwork is true then goto hiding-cat
	turn entity "%SELF%" south
	wait 1800ms /**/ turn entity "%SELF%" north
	wait 900ms /**/ turn entity "%SELF%" east
	wait 1000ms
}
maru-loiter {
	if flag storyflag-catwork is true then goto hiding-cat
	turn entity "%SELF%" west
	wait 1400ms /**/ turn entity "%SELF%" south
	wait 1800ms /**/ turn entity "%SELF%" north
	wait 400ms /**/ turn entity "%SELF%" east
	wait 400ms
}

hiding-cat {
	teleport entity "%SELF%" to geometry catwalk-hide
	goto null_script // this action absent in original; I guess this looped forever... O.o
}

cat-walking-to-work {
	walk entity "%SELF%" to geometry catwalk-spot over 600ms
	walk entity "%SELF%" to geometry catwalk-door over 500ms
	teleport entity "%SELF%" to geometry catwalk-hide
	goto hiding-cat
}

on_tick-max-neutral {
	if flag storyflag-catwork is true then goto null_script
	if entity "%PLAYER%" type is pipscat then goto on_tick-max-catwatch
	set entity Felix tick_script to felix-loiter
	set entity Maru tick_script to maru-loiter
	set entity "B. Murray" tick_script to bmurray-loiter
	set entity Deuteronomy tick_script to deut-loiter
}
on_tick-max-catwatch {
	if entity "%PLAYER%" type is not pipscat then goto on_tick-max-neutral
	set entity Felix tick_script to face-player
	set entity Maru tick_script to face-player
	set entity "B. Murray" tick_script to face-player
	set entity Deuteronomy tick_script to face-player
	if entity "%PLAYER%" animation is 2 then goto on_tick-max-thumbwatch
}
on_tick-max-thumbwatch {
	if entity "%PLAYER%" is inside geometry catwatch-zone then goto send-cats-to-work
	wait 2000ms
}

/* -------- ON_TICK CUTSCENE -------- */

send-cats-to-work {
	set player control to off
	wait 1300ms
	if entity Felix is not inside geometry felix-spot then goto show_dialog-max-crewmissing
	if entity Deuteronomy is not inside geometry deut-spot then goto show_dialog-max-crewmissing
	if entity Maru is not inside geometry maru-spot then goto show_dialog-max-crewmissing
	if entity "B. Murray" is not inside geometry bmurray-spot then goto show_dialog-max-crewmissing
	turn entity "Max Swagger" toward entity "%PLAYER%"
	play entity "Max Swagger" animation 3 once
	set entity "Max Swagger" animation to 4
	wait 500ms
	show dialog {
		entity "Max Swagger"
		"Oh! Approval from the cat boss himself!"
		Felix "Yeah, all right. We're good to go."
		"Let's get started!"
	}
	wait 300ms
	set entity Felix tick_script to cat-walking-to-work
	wait 400ms
	set entity Deuteronomy tick_script to cat-walking-to-work
	wait 400ms
	set entity Maru tick_script to cat-walking-to-work
	wait 400ms
	set entity "B. Murray" tick_script to cat-walking-to-work
	wait 400ms
	show dialog {
		entity "Max Swagger"
		"Brilliant! Now things can finally move forward!"
	}
	set player control to on
	set flag storyflag-catwork to true
	play entity "Max Swagger" animation 5 once
	set entity "Max Swagger" animation to 0
	copy calculate-hint-tracking-series
	if (variable hint-tracking-check is 6) {
		copy set-hint-none
	}
	goto null_script
}
show_dialog-max-crewmissing {
	show dialog {
		entity "Max Swagger"
		"Oh! Approval from the boss!"
		"But is the crew all here to see it...?"
	}
	set player control to on
	set entity "Max Swagger" tick_script to on_tick-max-neutral
}

/* -------- REGULAR STUFF -------- */

