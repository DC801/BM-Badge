debug-math {
	mutate math-test-20 = 20
	mutate math-test-21 = 21
	mutate math-test-22 = 22
	mutate math-test-23 = 23
	mutate math-test-24 = 24
	mutate math-test-25 = 25
	mutate math-test-26 = 26
	mutate math-test-27 = 27
	mutate math-test-28 = 28
	mutate math-test-29 = 29
	mutate math-test-30 = 30
	mutate math-test-20 / 10
	mutate math-test-21 / 10
	mutate math-test-22 / 10
	mutate math-test-23 / 10
	mutate math-test-24 / 10
	mutate math-test-25 / 10
	mutate math-test-26 / 10
	mutate math-test-27 / 10
	mutate math-test-28 / 10
	mutate math-test-29 / 10
	mutate math-test-30 / 10
	show dialog {
		SELF "I'm a math wizard!\n20 divided by 10 is $math-test-20$!\n21 divided by 10 is $math-test-21$!\n22 divided by 10 is $math-test-22$!"
		"23 divided by 10 is $math-test-23$!\n24 divided by 10 is $math-test-24$!\n25 divided by 10 is $math-test-25$!\n26 divided by 10 is $math-test-26$!"
		"27 divided by 10 is $math-test-27$!\n28 divided by 10 is $math-test-28$!\n29 divided by 10 is $math-test-29$!\n30 divided by 10 is $math-test-30$!"
	}
}
