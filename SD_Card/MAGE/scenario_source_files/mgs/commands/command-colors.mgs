include!("header.mgs")

// REGISTER

register-colors {
	register colors -> command-colors;
	register colors + bg -> command-colors-bg;
	register colors + bold -> command-colors-bold;
	register colors + dim -> command-colors-dim;
}

// COMMAND

command-colors {
	show serial dialog spacer;
	show serial dialog {
		"This is a test of the MGE ANSI color system!"
		"Also see options: bg, bold, dim"
		" "
		"<w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</>"
	}
}
command-colors-bg {
	show serial dialog spacer;
	show serial dialog {
		"MGE ANSI color test: \"bg\""
		"<bg-w><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-white"
		"<bg-r><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-red"
		"<bg-y><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-yellow"
		"<bg-g><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-green"
		"<bg-c><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-cyan"
		"<bg-b><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-blue"
		"<bg-m><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-magenta"
		"<bg-k><w>W<r>R<y>Y<g>G<c>C<b>B<m>M<k>K</> bg-black"
	}
}
