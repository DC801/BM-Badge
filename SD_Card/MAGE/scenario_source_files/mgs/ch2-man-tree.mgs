ch2-notakon-person-notakon-where {
	show serial dialog spacer
	if (flag ch2-seen-room-99 is false) {
		show serial dialog {
			"YOU: Where are you?"
			"TODO: convo"
			" "
		}
	} else {
		if (variable ch2-in-room is 99) {
			show serial dialog {
				"YOU: Where are you? I mean, where are WE? There aren't any doors here."
			}
		} else {
			show serial dialog {
				"YOU: Where are you? I mean, spatially, where is that lab of yours? There weren't any doors inside."
			}
		}
		show serial dialog {
			"NOTAKON: I'd say it's a pocket dimension, but it's more mundane than that. It's just its own separate space somewhere under the mountain. I set it all up back before everything went south, back when everyone was using the mainframe for all sorts of trivial nonsense."
			" "
		}
	}
	goto ch2-notakon-person-notakon-q
}
