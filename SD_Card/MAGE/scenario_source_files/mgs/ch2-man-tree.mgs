		# "(Quit)" : ch2-lambda-topic-nevermind
	}
}

ch2-lambda-topic-nevermind {
	show serial dialog spacer
	show serial dialog {
		"<c>YOU:</> I should go."
		" "
		"<m>LAMBDA:</> No problem! Just let me know if you have a question about anything."
	}
}

/* ---------- ARTIFACT ---------- */

ch2-lambda-topic-parts {
	show serial dialog spacer
	show serial dialog {
		"<m>LAMBDA:</> These are the parts we need:"
		// TODO change this to a MD checklist thingy
	}
	set flag temp to false
	if (flag ch2-installed-clock is false) {
		show serial dialog { "\t- clock" }
		set flag temp to true
	}
	if (flag ch2-installed-heatsink is false) {
		show serial dialog { "\t- heat sink" }
		set flag temp to true
	}
	if (flag ch2-installed-keyboard is false) {
		show serial dialog { "\t- keyboard" }
		set flag temp to true
	}
	if (flag ch2-installed-cpu is false) {
		show serial dialog { "\t- cpu" }
		set flag temp to true
	}
	if (flag ch2-installed-goldfish is false) {
		show serial dialog { "\t- goldfish" }
		set flag temp to true
	}
	if (flag ch2-installed-abacus is false) {
		show serial dialog { "\t- abacus" }
		set flag temp to true
	}
	if (flag ch2-installed-powersupply is false) {
		show serial dialog { "\t- powersupply" }
		set flag temp to true
	}
	if (flag temp is false) {
		goto ch2-lambda-topic-parts-finished
	}
	set flag temp to false
	goto ch2-lambda-topic-parts-q
}

ch2-lambda-topic-parts-q {
	show serial dialog {
		" "
		"(Type the part name for more info, <c>LIST</> to see the parts list again, or <c>QUIT</> to go back)"

		_ "LIST" : ch2-lambda-topic-parts

		_ "Q" : ch2-command-man-normal-convo
		_ "QUIT" : ch2-command-man-normal-convo
		
		_ "CLOCK" : ch2-lambda-parts-clock

		_ "HEAT SINK" : ch2-lambda-parts-heatsink
		_ "HEATSINK" : ch2-lambda-parts-heatsink

		_ "CPU" : ch2-lambda-parts-cpu

		_ "GOLDFISH" : ch2-lambda-parts-goldfish

		_ "POWERSUPPLY" : ch2-lambda-parts-powersupply
		_ "POWER SUPPLY" : ch2-lambda-parts-powersupply
		
		_ "KEYBOARD" : ch2-lambda-parts-keyboard
	}
}

