settings for serial dialog { wrap 60 }

ch2-command-man-normal-convo {
	show serial dialog spacer
	show serial dialog {
		"<m>LAMBDA:</> What do you want to know?"
		" "
	}
	goto ch2-lambda-topic-q
}

ch2-lambda-topic-q {
	show serial dialog {
		"(Ask about:)"
		# "Parts list" : ch2-lambda-topic-parts
